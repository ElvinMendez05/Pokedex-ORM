<div class="container my-5">
  <!-- Encabezado -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
      <i class="bi bi-lightning-fill me-2"></i>Listado de Tipos de Pokémon
    </h2>

    <!-- Botón Crear -->
    <a href="/tipos/create" class="btn btn-primary shadow-sm">
      <i class="bi bi-plus-circle me-1"></i> Crear nuevo tipo
    </a>
  </div>

  {{#if hasTipos}}
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-hover align-middle bg-white rounded border">
        <thead class="table-primary text-center">
          <tr>
            <th scope="col" class="text-start">Nombre del Tipo</th>
            <th scope="col" class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each tiposList}}
            <tr>
              <td class="text-start fw-semibold">{{this.nombre}}</td>
              <td class="text-end">
                <a href="/tipos/edit/{{this.id}}" class="btn btn-sm btn-outline-primary me-2 shadow-sm">
                  <i class="bi bi-pencil-square me-1"></i>Editar
                </a>
                <form action="/tipos/delete" method="POST" class="d-inline">
                  <input type="hidden" name="tiposId" value="{{this.id}}">
                  <button type="submit" class="btn btn-sm btn-outline-danger delete-tipos shadow-sm">
                    <i class="bi bi-trash-fill me-1"></i>Eliminar
                  </button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info shadow-sm">
      <i class="bi bi-info-circle me-1"></i>No hay tipos registrados aún.
    </div>
  {{/if}}
</div>

{{#section "scripts"}}
  <script src="/assets/js/site/tipos/index.js"></script>
{{/section}}